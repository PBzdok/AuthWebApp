<% provide(:title, "Edit user") %>

<h1>Signing Message</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p hidden id="user_id"><%= @message.user_id %></p>
    <p id="content">Content: <%= @message.content %></p>
    <button type="button" class="btn btn-primary" id="sign_button">Sign</button>
  </div>
</div>

<%= render 'layouts/authentication_modal' %>
<%= javascript_include_tag "otp"  %>

